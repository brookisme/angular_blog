  %div{ id: "player_{{ctrl.data.video.identifier}}", ng_init: "ctrl.youtube.init(ctrl.data.video.identifier)"}
    %h4 Host: {{ctrl.data.video.host}}
    %h4 Video ID: {{ctrl.data.video.identifier}}
